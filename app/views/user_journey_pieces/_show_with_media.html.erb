
<%= cl_image_tag piece.photo.key, height: 300, width: 390, crop: :fill %>
<div class='container w-100'>
  <div class = 'pieces-details'>
    <h1><%= piece.name %></h1>
    <h2><%= piece.artist %></h2>
    <p><%= piece.creation_year %></p>
    <p><%= piece.materials_techniques %></p>
  </div>

<div class='results-question'>
    <h2><i class="fa-regular fa-lightbulb"></i> <strong>RÃ©ponses aux questions : </h2></strong>
    <% piece.questions.each do |question| %>
      <strong><h3><%= question.content %></h3></strong>
      <p><i class="fa-solid fa-arrow-right-long"></i> <%= question.right_answer_content %></p>
    <% end %>
  </div>

  <div class='fun-fact'>
    <h2><i class="fa-regular fa-lightbulb"></i> <strong>Le saviez-vous ?</strong></h2>
    <ul>
      <% piece.fun_facts.each do |fun_fact| %>
        <li><%= fun_fact %></li>
      <% end %>
    </ul>
  </div>
</div>

  <p class='media'><%= piece.media.html_safe %></p>

  <div class='d-flex justify-content-center my-2'>
    <%= link_to "Continuer la visite", user_journey_path(user_journey), class: 'btn btn-filled' %>
  </div>
