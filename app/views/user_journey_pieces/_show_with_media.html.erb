
  <%= cl_image_tag piece.photo.key, height: 300, width: 390, crop: :fill %>
  <div class='container w-100'>
    <h1 class='container w-100 text-center'><%= piece.name %></h1>
    <h2 class='container w-100 text-center'><%= piece.artist %></h2>
    <p class='container w-100 text-center'><%= piece.creation_year %></p>
    <p class='container w-100 text-center'><%= piece.materials_techniques %></p>

  <div class='results-question'>
    <h2><i class="fa-regular fa-lightbulb"></i> <strong>RÃ©ponses aux questions : </h2></strong>
